.main-content {
    min-height: 90vh;
    overflow-y: hidden;
}

.content-center {
    top: 50%;
    left: 50%;
    position: fixed;
    -moz-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
}

.pin-field {
    display: flex;
    align-items: center;
}

.input-pin:focus {
    border-bottom: 2px solid #316163;
}

.error-message {
    color: lightcoral;
    font-weight: bolder;
}

.input-pin {
    margin: 10px;
    font-weight: bold;
    text-align: center;
    height: 30px;
    width: 150px;
    border: none;
    border-bottom: 1px solid cadetblue;
    outline: none;
}

.login-button {
    margin-top: 20px;
    cursor: pointer;
    padding: 10px 10px;
    border: 2px solid #C3C6C9;
    background-color: #4682B4;
    color: white;
    -webkit-border-radius: 50px;
    -moz-border-radius: 50px;
    border-radius: 50px;
    font-weight: bold;
    letter-spacing: .15rem;

}

.jury-title {
    margin-bottom: 50px;
}
