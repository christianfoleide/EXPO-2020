package com.expo2020.controllers;

import com.expo2020.models.Stand;
import com.expo2020.services.StandService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import javax.servlet.http.Cookie;
import javax.servlet.http.HttpServletResponse;
import java.util.List;
import java.util.Optional;

@Controller
public class StandController {

    @Autowired
    private StandService standService;

    @GetMapping("/all")
    public List<Stand> stands(Model model) {
        List<Stand> stands = standService.findAll();
        System.out.println(stands.toString());
        return stands;

    }

    @GetMapping("/stem/{id}")
    public String stand(@PathVariable Long id , Model model) {

        Optional<Stand> stand = standService.findById(id);

        if (stand.isPresent()) {
            Stand s = stand.get();

            System.out.println(stand.toString());

            model.addAttribute("navn", stand.get().getNavn());
            return "stand.html";
        }

        return "";
    }
}
